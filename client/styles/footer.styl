footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 1em 0;
  background-color: #6e5494;
  font-size: 0.7em;
  color: white;
}

footer p {
  padding: 0 1em;
}

footer a, footer a:visited {
  color: white;
  text-decoration: none;
  font-weight: bold;
}

footer a:hover {
  color: #66CEFF;
}
