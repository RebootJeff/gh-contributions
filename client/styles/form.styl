input {
  display: block;
  margin: 0 auto 20px auto;
}

input:-webkit-autofill {
  box-shadow(0 0 0 1000px white inset);
}

input {
  width: 320px;
  padding: 10px 0;
  border: 0;
  border-bottom: 3px solid $primary_color;
  font-size: 1.7em;
  font-weight: bold;
  text-align: center;
}

input::-webkit-input-placeholder {
  font-weight: lighter;
	color: rgba(79, 41, 88, 0.4);
}
input::-moz-placeholder {
  font-weight: lighter;
	color: rgba(79, 41, 88, 0.5);
}
input:-moz-placeholder {   /* Older versions of Firefox */
  font-weight: lighter;
	color: rgba(79, 41, 88, 0.5);
}
input:-ms-input-placeholder {
  font-weight: lighter;
	color: rgba(79, 41, 88, 0.5);
}

/*csslint outline-none:false */
input:focus {
  outline: none;
}

form button {
  display: block;
  min-width: 120px;
  margin: 0 auto 20px auto;
  padding: 15px;
  font-size: 1.5em;
}
